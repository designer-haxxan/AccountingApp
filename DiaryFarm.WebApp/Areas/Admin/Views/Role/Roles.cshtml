<main id="main" class="main">
    @{
        var navigationData = new NavigationViewModel
            {
                Title = "Add Roles",
                Links = new List<string>
    {
    "Users",
    "Add Roles"
    }
            };
    }

    @await Html.PartialAsync("_NavigationPartial", navigationData)
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <button type="button" id="btnAddRole" class="btn btn-success mb-5 mt-3"><i class="bi bi-check-circle"></i>&nbsp;&nbsp;&nbsp;New Role</button>
                        <!-- Table with stripped rows -->
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-12">
                                    <table class="table table-hover" id="tblRoles" style="width:100%;">
                                        <thead>
                                            <tr>
                                                <th scope="col">ID</th>
                                                <th scope="col">Role</th>
                                                <th scope="col"></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <!-- End Table with stripped rows -->

                    </div>
                </div>

            </div>
        </div>
    </section>
    <!--Role Modal Code Start-->
    <div class="modal fade" id="RoleModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add New Role</h5>
                    <button type="button" class="btn-close close"></button>
                </div>
                <div class="modal-body">
                    <div class="col-md-12">
                        <input type="text" class="form-control" placeholder="Role" id="txtRole">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary close">Close</button>
                    <button type="button" class="btn btn-primary" id="btnSaveRole">Save changes</button>
                </div>
            </div>
        </div>
    </div>

</main>


@section Scripts {
    <script src="~/js/accesscontrolarea/role.js"></script>
}
